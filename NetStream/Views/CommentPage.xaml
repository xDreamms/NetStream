<Page x:Class="NetStream.Views.CommentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream.Views"
      xmlns:controls="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="Transparent"
      Title="CommentPage" Unloaded="CommentPage_OnUnloaded" x:Name="COmmentsPage" MouseDown="CommentPage_OnMouseDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.02*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock  FontSize="24" VerticalAlignment="Center" Margin="10 0 0 0" Text="{DynamicResource CommentsStringLowerCase}" Foreground="White" Style="{StaticResource Gotham}"></TextBlock>
            <TextBlock x:Name="TextBlockCommentCounter" Style="{StaticResource Gotham}" VerticalAlignment="Center" Margin="10 4 0 0" Text="" Foreground="#909196"></TextBlock>
        </StackPanel>

        <Grid x:Name="ViewboxNoCommentsFound" Grid.Row="1" Grid.Column="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="0.4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Viewbox  Grid.Row="0" Grid.Column="1" Margin="0 120 0 150">
                <TextBlock Opacity="0.3" x:Name="NoCommentsFound" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource NoCommentsFound}" Foreground="#414141"></TextBlock>
            </Viewbox>
        </Grid>

        <StackPanel Margin="140" Visibility="Collapsed" Grid.Row="1" Grid.Column="1" x:Name="SearchingPanel" Orientation="Vertical"  VerticalAlignment="Center">
            <hc:LoadingCircle Foreground="White" Grid.Row="1" Height="100" Width="100" />
        </StackPanel>

        <ListBox Loaded="CommentsDisplay_OnLoaded" Visibility="Collapsed" Grid.Column="1" HorizontalAlignment="Left" Width="Auto" Grid.Row="1" Margin="0 0 0 0" VirtualizingPanel.ScrollUnit="Pixel"    ScrollViewer.CanContentScroll="True" 
          VirtualizingPanel.IsVirtualizing="true" 
          VirtualizingPanel.VirtualizationMode="Recycling"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="Transparent" x:Name="CommentsDisplay">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel  Width="{Binding ActualWidth, ElementName=CommentsDisplay}" Cursor="Hand"  Margin="0 0 0 10" Orientation="Horizontal">
                        <hc:Gravatar  Source="{Binding ProfileImage}" Width="67" Height="67"  Cursor="Hand"  x:Name="Gravatar"   Margin="0 15 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"   Style="{StaticResource GravatarCircleImg}"></hc:Gravatar>
                        <StackPanel Margin="10 0 0 0" Orientation="Vertical">
                           <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <TextBlock Foreground="#FAFBFD" Margin="0 0 0 0" Text="{Binding DisplayName}" FontSize="16" FontWeight="Normal" Style="{StaticResource Gotham}"></TextBlock>
                                <TextBlock Foreground="#919297" Margin="7 2 0 0" Text="{Binding RelativeDate}" FontSize="12" FontWeight="Light" Style="{StaticResource Gotham}"></TextBlock>
                                <materialDesign:PopupBox x:Name="PopupBoxMainComment" Height="20"  HorizontalContentAlignment="Center"
                                                         PopupMode="Click"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Top"
                                                         Margin="0 -1 0 0">
                                   <StackPanel  Orientation="Vertical">
                                        <TextBlock Cursor="Hand" PreviewMouseLeftButtonDown="PopupBOxMainCommentEditBtnPreviewMouseLeftDown" x:Name="PopupBOxMainCommentEditBtn" HorizontalAlignment="Center" Style="{StaticResource Gotham}" FontSize="14"  Margin="10 5 10 0" Text="{DynamicResource Edit}"></TextBlock>
                                        <TextBlock Cursor="Hand" PreviewMouseLeftButtonDown="PopupBOxMainCommentDeleteBtnPreviewMouseLeftDown" x:Name="PopupBOxMainCommentDeleteBtn" HorizontalAlignment="Center" Style="{StaticResource Gotham}" FontSize="14" Margin="10 10 10 0" Text="{DynamicResource Delete}" Foreground="Red"></TextBlock>
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </StackPanel>
                            <StackPanel Margin="0 10 0 0" HorizontalAlignment="Left" x:Name="StackPanelTExtMain">
                                <TextBlock x:Name="TextBlockMainCommentText" Style="{StaticResource Gotham}" FontSize="16" Foreground="#D3D4D7" TextWrapping="Wrap" Text="{Binding Text}"></TextBlock>
                                <Grid  x:Name="GridEditArea" HorizontalAlignment="Left" Margin="-70 -20 0 0" Visibility="Collapsed" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="MainCommentTextBoxEditReply" FontSize="14" Margin="10 20 0 0"
                                                 Background="#1F1F27"
                                                 Height="Auto"
                                                 VerticalAlignment="Center"
                                                 materialDesign:HintAssist.Hint="{DynamicResource EditComment}" Foreground="White"
                                                 materialDesign:HintAssist.Background="Transparent"
                                                 AcceptsReturn="True"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"
                                        />
                                    </StackPanel>
                                    <Button x:Name="MainCommentEditReplySendBtn" PreviewMouseLeftButtonDown="MainCommentEditReplySendBtnPreviewMouseLeftDown"  Grid.Column="2" VerticalAlignment="Top"
                                            Content="{DynamicResource Save}" Margin="10 19 0 0"
                                            Style="{StaticResource MaterialDesignPaperLightButton}"
                                    />
                                    <Button x:Name="MainCommentCancelEditReplySendBtn" PreviewMouseLeftButtonDown="MainCommentCancelEditReplySendBtnPreviewMouseLeftDown"  Grid.Column="3" VerticalAlignment="Top"
                                            Content="{DynamicResource Cancel}" Margin="10 19 0 0"
                                            Style="{StaticResource MaterialDesignPaperLightButton}"
                                    />
                                </Grid>
                            </StackPanel>
                           <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                                <fa:IconBlock IconFont="Solid" FontSize="18" Icon="ThumbsUp" x:Name="ThumbsUpMainComment" PreviewMouseLeftButtonDown="ThumbsUpMainCOmmentPreviewMouseLeftDown" Foreground="#919198"></fa:IconBlock>
                                <TextBlock Margin="10 0 0 0" FontSize="18" Style="{StaticResource Gotham}" FontWeight="Light" Foreground="#919198" Text="{Binding LikeCount}"></TextBlock>
                                <fa:IconBlock IconFont="Solid" Margin="10 0 0 0" FontSize="18" x:Name="ThumbsDownMainComment" PreviewMouseLeftButtonDown="ThumbsDownMainCOmmentPreviewMouseLeftDown" Icon="ThumbsDown"  Foreground="#919198"></fa:IconBlock>
                                <TextBlock Margin="10 0 0 0" FontSize="18"  Style="{StaticResource Gotham}" FontWeight="Light" Foreground="#919198" Text="{Binding DislikeCount}"></TextBlock>
                                <TextBlock x:Name="ReplyButton" PreviewMouseLeftButtonDown="ReplyButtonPreviewMouseLeftDown" Margin="10 0 0 0" FontSize="18"  Style="{StaticResource Gotham}" FontWeight="Normal" Foreground="#919198" Text="{DynamicResource Reply}"></TextBlock>
                           </StackPanel>



                           <Grid x:Name="GridReplyArea" HorizontalAlignment="Left" Margin="50 0 0 0" Visibility="Collapsed" >
                               <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="Auto"></ColumnDefinition>
                                   <ColumnDefinition Width="*"></ColumnDefinition>
                                   <ColumnDefinition Width="Auto"></ColumnDefinition>
                               </Grid.ColumnDefinitions>

                               <hc:Gravatar  x:Name="ProfileImageReply"  Width="67" Height="67"  Cursor="Hand"    Margin="0 10 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"   Style="{StaticResource GravatarCircleImg}"></hc:Gravatar>
                                <StackPanel Grid.Column="1">
                                   <TextBox x:Name="CommentTextBoxReply" FontSize="14" Margin="10 20 0 0"
                                            Background="#1F1F27"
                                            Height="Auto"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="{DynamicResource AddComment}" Foreground="White"
                                            materialDesign:HintAssist.Background="Transparent"
                                            AcceptsReturn="True"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto"
                                   />
                               </StackPanel>
                               <Button x:Name="CommentReplySendBtn" PreviewMouseLeftButtonDown="CommentSendReplyButtonPreviewMouseLeftDown"  Grid.Column="2" VerticalAlignment="Top"
                                       Content="{DynamicResource Send}" Margin="10 19 0 0"
                                       Style="{StaticResource MaterialDesignPaperLightButton}"
                               />
                           </Grid>


                            <Expander   materialDesign:ExpanderAssist.ExpanderButtonPosition="Start" Header="{Binding ReplyCommentCount}" Width="{Binding ActualWidth, ElementName=CommentsDisplay}"  Background="Transparent" Margin="-23 10 0 0"  x:Name="ExpanderReplyComments"
                                      HorizontalAlignment="Left" 
                                      Foreground="White">

                                <ListBox Loaded="ReplyCommentsDisplayLoaded" Margin="20 0 0 0" VirtualizingPanel.ScrollUnit="Pixel"    ScrollViewer.CanContentScroll="True" 
                                         VirtualizingPanel.IsVirtualizing="true" 
                                         VirtualizingPanel.VirtualizationMode="Recycling"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="Transparent" Width="{Binding ActualWidth, ElementName=CommentsDisplay}" Height="Auto"  x:Name="ReplyCommentsDisplay" ItemsSource="{Binding ReplyComments}">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <ContentPresenter/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Width="{Binding ActualWidth, ElementName=ReplyCommentsDisplay}"  Cursor="Hand"  Margin="0 0 0 10" Orientation="Horizontal">
                                                <hc:Gravatar  Source="{Binding ProfileImage}" Width="67" Height="67"  Cursor="Hand"  x:Name="Gravatar"   Margin="0 15 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"   Style="{StaticResource GravatarCircleImg}"></hc:Gravatar>
                                                <StackPanel Margin="10 0 0 0" Orientation="Vertical">
                                                    <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <TextBlock Foreground="#FAFBFD" Margin="0 0 0 0" Text="{Binding DisplayName}" FontSize="16" FontWeight="Normal" Style="{StaticResource Gotham}"></TextBlock>
                                                        <TextBlock Foreground="#919297" Margin="7 2 0 0" Text="{Binding RelativeDate}" FontSize="12" FontWeight="Light" Style="{StaticResource Gotham}"></TextBlock>
                                                        <materialDesign:PopupBox x:Name="PopupBoxReplyComment" Height="20"  HorizontalContentAlignment="Center"
                                                            PopupMode="Click"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="0 -1 0 0">
                                                            <StackPanel  Orientation="Vertical">
                                                                <TextBlock Cursor="Hand" PreviewMouseLeftButtonDown="PopupBOxReplyCommentEditBtnPreviewMouseLeftDown" x:Name="PopupBOxReplyCommentEditBtn" HorizontalAlignment="Center" Style="{StaticResource Gotham}" FontSize="14"  Margin="10 5 10 0" Text="{DynamicResource Edit}"></TextBlock>
                                                                <TextBlock Cursor="Hand" PreviewMouseLeftButtonDown="PopupBOxReplyCommentDeleteBtnPreviewMouseLeftDown" x:Name="PopupBOxReplyCommentDeleteBtn" HorizontalAlignment="Center" Style="{StaticResource Gotham}" FontSize="14" Margin="10 10 10 0" Text="{DynamicResource Delete}" Foreground="Red"></TextBlock>
                                                            </StackPanel>
                                                        </materialDesign:PopupBox>
                                                    </StackPanel>
                                                    <StackPanel x:Name="StackPanelTExtReply" Margin="0 10 0 0" HorizontalAlignment="Left" >
                                                        <TextBlock x:Name="TextBlockTextReplyComment" Style="{StaticResource Gotham}" FontSize="16" Foreground="#D3D4D7" TextWrapping="Wrap" Text="{Binding Text}"></TextBlock>
                                                        <Grid  x:Name="GridEditReplyArea" HorizontalAlignment="Left" Margin="-70 -20 0 0" Visibility="Collapsed" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="60"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="1">
                                                                <TextBox x:Name="ReplyCommentTextBoxEditReply" FontSize="14" Margin="10 20 0 0"
                                                                         Background="#1F1F27"
                                                                         Height="Auto"
                                                                         VerticalAlignment="Center"
                                                                         materialDesign:HintAssist.Hint="{DynamicResource EditComment}" Foreground="White"
                                                                         materialDesign:HintAssist.Background="Transparent"
                                                                         AcceptsReturn="True"
                                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                         TextWrapping="Wrap"
                                                                         VerticalScrollBarVisibility="Auto"
                                                                />
                                                            </StackPanel>
                                                            <Button x:Name="ReplyCommentEditReplySendBtn" PreviewMouseLeftButtonDown="ReplyCommentEditReplySendBtnPreviewMouseLeftDown"  Grid.Column="2" VerticalAlignment="Top"
                                                                    Content="{DynamicResource Save}" Margin="10 19 0 0"
                                                                    Style="{StaticResource MaterialDesignPaperLightButton}"
                                                            />
                                                            <Button x:Name="ReplyCommentCancelEditReplySendBtn" PreviewMouseLeftButtonDown="ReplyCommentCancelEditReplySendBtnPreviewMouseLeftDown"  Grid.Column="3" VerticalAlignment="Top"
                                                                    Content="{DynamicResource Cancel}" Margin="10 19 0 0"
                                                                    Style="{StaticResource MaterialDesignPaperLightButton}"
                                                            />
                                                        </Grid>
                                                    </StackPanel>
                                                    <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                                                        <fa:IconBlock IconFont="Solid" FontSize="18" Icon="ThumbsUp" x:Name="ThumbsUpReplyComments" PreviewMouseLeftButtonDown="ThumsUpReplyCommentsPreviewMouseLeftDown" Foreground="#919198"></fa:IconBlock>
                                                        <TextBlock Margin="10 0 0 0" FontSize="18" Style="{StaticResource Gotham}" FontWeight="Light" Foreground="#919198" Text="{Binding LikeCount}"></TextBlock>
                                                        <fa:IconBlock IconFont="Solid" Margin="10 0 0 0" x:Name="ThumbsDownReplyComments"  PreviewMouseLeftButtonDown="ThumsDownReplyCommentsPreviewMouseLeftDown" FontSize="18" Icon="ThumbsDown"  Foreground="#919198"></fa:IconBlock>
                                                        <TextBlock Margin="10 0 0 0" FontSize="18"  Style="{StaticResource Gotham}" FontWeight="Light" Foreground="#919198" Text="{Binding DislikeCount}"></TextBlock>
                                                        <TextBlock x:Name="ReplyBUtton2" PreviewMouseLeftButtonDown="ReplyButton2PreviewMouseleftDown" Margin="10 0 0 0" FontSize="18"  Style="{StaticResource Gotham}" FontWeight="Normal" Foreground="#919198" Text="{DynamicResource Reply}"></TextBlock>
                                                    </StackPanel>
                                                    <Grid x:Name="GridReply2Area" HorizontalAlignment="Left" Margin="50 0 0 0" Visibility="Collapsed" >
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <hc:Gravatar  x:Name="ProfileImageReply2"  Width="67" Height="67"  Cursor="Hand"    Margin="0 10 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"   Style="{StaticResource GravatarCircleImg}"></hc:Gravatar>
                                                        
                                                        <StackPanel Grid.Column="1">
                                                            <TextBox x:Name="CommentTextBoxReply2" FontSize="14" Margin="10 20 0 0"
                                                              Background="#1F1F27"
                                                              Height="Auto"
                                                              VerticalAlignment="Center"
                                                              materialDesign:HintAssist.Hint="{DynamicResource AddComment}" Foreground="White"
                                                              materialDesign:HintAssist.Background="Transparent"
                                                              AcceptsReturn="True"
                                                              Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                              TextWrapping="Wrap"
                                                              VerticalScrollBarVisibility="Auto"
                                                     />
                                                        </StackPanel>
                                                        <Button x:Name="CommentReplySendBtn2" PreviewMouseLeftButtonDown="CommentSendReplyButton2PreviewMouseLeftDown"  Grid.Column="2" VerticalAlignment="Top"
                                                         Content="{DynamicResource Send}" Margin="10 19 0 0"
                                                         Style="{StaticResource MaterialDesignPaperLightButton}"
                                                 />
                                                    </Grid>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel HorizontalAlignment="Center" VirtualizingStackPanel.IsVirtualizing="True"  VirtualizingStackPanel.VirtualizationMode="Recycling" IsItemsHost="True" Orientation="Horizontal"  />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                            </Expander>

                          
                        </StackPanel>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" VirtualizingStackPanel.IsVirtualizing="True"  VirtualizingStackPanel.VirtualizationMode="Recycling" IsItemsHost="True" Orientation="Horizontal"  />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <Grid Grid.Row="2" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <hc:Gravatar  x:Name="ProfileImage"  Width="67" Height="67"  Cursor="Hand"    Margin="0 10 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"   Style="{StaticResource GravatarCircleImg}"></hc:Gravatar>
           
            <StackPanel Grid.Column="1">
                <TextBox x:Name="CommentTextBox" FontSize="14" Margin="10 20 0 0"
                         Background="#1F1F27"
                    Height="Auto"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="{DynamicResource AddComment}" Foreground="White"
                    materialDesign:HintAssist.Background="Transparent"
                    AcceptsReturn="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"
                />
            </StackPanel>
            <Button x:Name="CommentSendBtn" PreviewMouseLeftButtonDown="CommentSendBtn_OnPreviewMouseLeftButtonDown" Grid.Column="2" VerticalAlignment="Top"
                    Content="{DynamicResource Send}" Margin="10 19 0 0"
                Style="{StaticResource MaterialDesignPaperLightButton}"
            />
        </Grid>

    </Grid>
</Page>
