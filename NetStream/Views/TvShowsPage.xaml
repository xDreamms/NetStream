                    <Viewbox Margin="50 30 0 0"  HorizontalAlignment="Left" x:Name="OverviewBox" >
                        <StackPanel Width="700">
                            <TextBlock FontSize="8" FontWeight="Light" Style="{StaticResource Gotham}"
                                       TextWrapping="Wrap" 
