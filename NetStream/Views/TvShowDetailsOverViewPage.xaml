<Page x:Class="NetStream.TvShowDetailsOverViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      Title="TvShowDetailsOverViewPage"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#111111" Loaded="TvShowDetailsOverViewPage_OnLoaded" KeepAlive="False">

    <Grid>
        <Grid x:Name="MovieDetailArea" >
            <StackPanel Margin="0 50 0 30" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Border  Height="473" Width="315" BorderBrush="#1F2021" VerticalAlignment="Top"  HorizontalAlignment="Center" BorderThickness="5" Margin="0 9 0 0" Grid.Column="1" Grid.Row="1">
                    <Image Stretch="UniformToFill" Source="{Binding Poster}" ></Image>
                </Border>

                <StackPanel Orientation="Vertical" Margin="35 35 0 0">
                    <TextBlock x:Name="StoryLineString" Style="{StaticResource Gotham}" FontWeight="Medium" FontSize="35" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Text="{DynamicResource StorylineString}" Foreground="White" ></TextBlock>
                    <Viewbox Margin="0 10 0 0"  HorizontalAlignment="Left" VerticalAlignment="Top" >
                        <StackPanel  Width="900">
                            <TextBlock  x:Name="OverviewString" FontSize="17" Style="{StaticResource Gotham}" FontWeight="Normal"
                                       TextWrapping="Wrap" 
                                       Foreground="#C6C6C6"
                                       Text="{Binding Overview}" />
                        </StackPanel>
                    </Viewbox>

                    <StackPanel Margin="0 30 0 0" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal"  >
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="0 0 0 0" FontSize="15" HorizontalAlignment="Left" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource DirectorString}" x:Name="DirectorString" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock  Margin="0 15 0 0"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource StatusString}" x:Name="StatusString" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock  Margin="0 15 0 0"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource ProductionString}" x:Name="ProductionString" Foreground="#C5C5C5"></TextBlock>
                            </StackPanel>

                            <StackPanel Margin="50 0 0 0"  Orientation="Vertical">
                                <TextBlock PreviewMouseLeftButtonDown="DirectorText_OnPreviewMouseLeftButtonDown" MouseLeave="DirectorText_OnMouseLeave" MouseEnter="DirectorText_OnMouseEnter" Margin="0 0 0 0" FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{Binding Director}" Cursor="Hand" x:Name="DirectorText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock Margin="0 15 0 0"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{Binding Status}" x:Name="StatusText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock Margin="0 15 0 0"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{Binding Production}" x:Name="ProductionText" Foreground="#C5C5C5"></TextBlock>
                            </StackPanel>

                            <StackPanel Margin="200 0 0 0" Orientation="Vertical">
                                <TextBlock FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource GenreString}" Foreground="#C5C5C5" x:Name="GenreString"></TextBlock>
                                <TextBlock Margin="0 15 0 0"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource LanguageString}" x:Name="LanguageString" Foreground="#C5C5C5"></TextBlock>
                            </StackPanel>

                            <StackPanel Margin="50 0 0 0" Orientation="Vertical">
                                <TextBlock FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{Binding Genre}" Foreground="#C5C5C5" x:Name="GenreText"></TextBlock>
                                <TextBlock Margin="0 15 0 0"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal"  Text="{Binding Language}" Foreground="#C5C5C5" x:Name="LanguageText"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel  VerticalAlignment="Top" Margin="0 40 0 0" Orientation="Horizontal" >
                            <fa:IconBlock Margin="0 0 15 0" Cursor="Hand" MouseLeave="BtnFacebook_OnMouseLeave" MouseEnter="BtnFacebook_OnMouseEnter" PreviewMouseLeftButtonDown="BtnFacebook_OnPreviewMouseLeftButtonDown" x:Name="BtnFacebook"  FontSize="22" Icon="Facebook"  Foreground="White"></fa:IconBlock>
                            <fa:IconBlock Cursor="Hand" MouseLeave="BtnInstagram_OnMouseLeave" MouseEnter="BtnInstagram_OnMouseEnter" PreviewMouseLeftButtonDown="BtnInstagram_OnPreviewMouseLeftButtonDown" x:Name="BtnInstagram" Margin="0 0 15 0"  Icon="Instagram" FontSize="24" Foreground="White"></fa:IconBlock>
                            <fa:IconBlock Cursor="Hand" MouseLeave="BtnImdb_OnMouseLeave"  MouseEnter="BtnImdb_OnMouseEnter" PreviewMouseLeftButtonDown="BtnImdb_OnPreviewMouseLeftButtonDown"  x:Name="BtnImadb" Margin="0 0 15 0"  Icon="Imdb" FontSize="24" Foreground="White"></fa:IconBlock>
                            <fa:IconBlock Cursor="Hand" MouseLeave="BtnTwitter_OnMouseLeave" MouseEnter="BtnTwitter_OnMouseEnter" PreviewMouseLeftButtonDown="BtnTwitter_OnPreviewMouseLeftButtonDown" x:Name="BtnTwitter" Margin="0 0 15 0"  Icon="Twitter" FontSize="24" Foreground="White"></fa:IconBlock>
                        </StackPanel>
                    </StackPanel>
                    </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
