<Page x:Class="NetStream.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream"
      mc:Ignorable="d" 
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"

      d:DesignHeight="1500" d:DesignWidth="1584"
      Title="HomePage"
      Background="#111111" Loaded="HomePage_OnLoaded">
    <Page.Resources>
        <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
    </Page.Resources>
    <Grid x:Name="maingrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.038*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="#000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="0.18*"></RowDefinition>
                <RowDefinition Height="0.12*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="1">
                <fa:IconBlock Cursor="Hand" x:Name="ButtonBack" PreviewMouseLeftButtonDown="NavigationButtonPressed" IconFont="Solid" Icon="ArrowLeft" Foreground="White" ></fa:IconBlock>
            </Viewbox>

            <Viewbox Grid.Row="3">
                <fa:IconBlock MouseLeave="ButtonHome_OnMouseLeave" MouseEnter="ButtonHome_OnMouseEnter" Cursor="Hand" x:Name="ButtonHome" PreviewMouseLeftButtonDown="NavigationButtonPressed" IconFont="Solid" Icon="Home" Foreground="White" ></fa:IconBlock>
            </Viewbox>
            

     
            <Viewbox Grid.Row="5">
                <fa:IconBlock MouseLeave="ButtonMovie_OnMouseLeave" MouseEnter="ButtonMovie_OnMouseEnter" Icon="Film" IconFont="Regular"  Background="Black" Foreground="White" Cursor="Hand" x:Name="ButtonMovie" PreviewMouseLeftButtonDown="NavigationButtonPressed" ></fa:IconBlock>
            </Viewbox>


            <Viewbox Grid.Row="7">
                <fa:IconBlock MouseLeave="BUttonTvShow_OnMouseLeave" MouseEnter="BUttonTvShow_OnMouseEnter" Icon="TvRetro" IconFont="Solid" Background="Black" Foreground="White" Cursor="Hand" x:Name="BUttonTvShow" PreviewMouseLeftButtonDown="NavigationButtonPressed" ></fa:IconBlock>

            </Viewbox>


            <Viewbox Grid.Row="9">
                <fa:IconBlock MouseLeave="BUttonSearch_OnMouseLeave" MouseEnter="BUttonSearch_OnMouseEnter" Cursor="Hand" x:Name="BUttonSearch" PreviewMouseLeftButtonDown="NavigationButtonPressed" IconFont="Regular" Icon="Search" Foreground="White" ></fa:IconBlock>
            </Viewbox>


            <Viewbox Grid.Row="11">
                <fa:IconBlock MouseEnter="ButtonDiscover_OnMouseEnter" MouseLeave="ButtonDiscover_OnMouseLeave" Cursor="Hand" x:Name="ButtonDiscover" PreviewMouseLeftButtonDown="NavigationButtonPressed" IconFont="Regular" Icon="Compass" Foreground="White" ></fa:IconBlock>
            </Viewbox>

           

            <Viewbox Grid.Row="13">
                <fa:IconBlock MouseLeave="ButtonDownload_OnMouseLeave" MouseEnter="ButtonDownload_OnMouseEnter" Cursor="Hand" x:Name="ButtonDownload" PreviewMouseLeftButtonDown="NavigationButtonPressed" IconFont="Regular" Icon="Download" Foreground="White" ></fa:IconBlock>
            </Viewbox>

            <Viewbox Grid.Row="17">
                <fa:IconBlock MouseLeave="ButtonAccount_OnMouseLeave" MouseEnter="ButtonAccount_OnMouseEnter" Cursor="Hand" x:Name="ButtonAccount" PreviewMouseLeftButtonDown="NavigationButtonPressed" IconFont="Regular" Icon="User"  Foreground="White" ></fa:IconBlock>
            </Viewbox>

            <Viewbox Grid.Row="19">
                <fa:IconBlock MouseLeave="ButtonSettings_OnMouseLeave" MouseEnter="ButtonSettings_OnMouseEnter" Cursor="Hand" x:Name="ButtonSettings" PreviewMouseLeftButtonDown="NavigationButtonPressed" IconFont="Regular" Icon="Cog"  Foreground="White" ></fa:IconBlock>
            </Viewbox>

            <Viewbox Grid.Row="15">
                <fa:IconBlock Cursor="Hand" x:Name="BtnWatchHistory" MouseLeave="BtnWatchHistory_OnMouseLeave" MouseEnter="BtnWatchHistory_OnMouseEnter" Icon="Eye" PreviewMouseLeftButtonDown="NavigationButtonPressed"  IconFont="Regular" Foreground="White"></fa:IconBlock>
            </Viewbox>

            

             <!--<Grid Grid.Row="0" Margin="0 0 0 0">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="0.3*"></ColumnDefinition>
                     <ColumnDefinition Width="*"></ColumnDefinition>
                     <ColumnDefinition Width="0.3*"></ColumnDefinition>
                 </Grid.ColumnDefinitions>
                 <Image Source="logo-removebg.png" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top"></Image>
            </Grid>-->
          

        </Grid>

        <Border Grid.Column="0" BorderBrush="#111111"  BorderThickness="0,0,1,0" />


        <Frame BorderThickness="0" x:Name="HomePageNavigation" Grid.Row="0" Grid.Column="1"></Frame>
       
       
    </Grid>
</Page>
