<Page x:Class="NetStream.Views.WatchHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream.Views"
      xmlns:controls="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WatchHistoryPage" Loaded="WatchHistoryPage_OnLoaded" Unloaded="WatchHistoryPage_OnUnloaded">

    <Grid Background="#111111">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.05*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.03*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left">
            <TextBlock Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource WatchHistoryString}" Foreground="White"></TextBlock>
        </Viewbox>

        <ListBox VirtualizingPanel.ScrollUnit="Pixel"  PreviewMouseRightButtonDown="WatchHistoryDisplay_OnPreviewMouseRightButtonDown"  Grid.Row="2" Grid.Column="1"   ScrollViewer.CanContentScroll="True" 
                 VirtualizingPanel.IsVirtualizing="true" 
                 VirtualizingPanel.VirtualizationMode="Recycling"   SelectionChanged="WatchHistoryDisplay_OnSelectionChanged"  ScrollViewer.ScrollChanged="WatchHistoryDisplay_OnScrollChanged"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="Transparent" x:Name="WatchHistoryDisplay">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Cursor="Hand"  Margin="0 20 20 0" Orientation="Horizontal">
                        <StackPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{DynamicResource GoToDetails}" x:Name="ContextMenuDetails" Click="GotoDetailsMenuItemClick"></MenuItem>
                            </ContextMenu>
                        </StackPanel.ContextMenu>
                       
                  
                            <Image Width="275" Height="150" RenderTransformOrigin="0.5,0.5"  Source="{Binding Poster}">

                                <Image.RenderTransform>
                                    <ScaleTransform x:Name="ImageScale" ScaleX="1" ScaleY="1" ></ScaleTransform>
                                </Image.RenderTransform>
                                <Image.Triggers>
                                    <EventTrigger RoutedEvent="Image.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.20" />
                                                <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.20" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.20" />
                                                <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.20" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Image.Triggers>
                            </Image>


                        <StackPanel Orientation="Vertical" Margin="20 5 0 0">
                          <TextBlock HorizontalAlignment="Left" FontSize="21"  Style="{StaticResource Gotham}" FontWeight="Normal" Width="350" TextWrapping="Wrap" Text="{Binding Name}"></TextBlock>
                            <TextBlock FontSize="16" Margin="0 10 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding RelativeDate}"></TextBlock>
                            <TextBlock HorizontalAlignment="Right" FontSize="16" Margin="0 10 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding ProgressText}"></TextBlock>
                            <ProgressBar Background="#808080" BorderBrush="#808080" Maximum="1" HorizontalAlignment="Left" Width="500" Margin="0 20 0 0" Value="{Binding Progress,UpdateSourceTrigger=PropertyChanged}"></ProgressBar>
                        </StackPanel>
                          
                       

                        
                      




                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:VirtualizingWrapPanel AllowDifferentSizedItems="True" HorizontalAlignment="Left" ScrollUnit="Pixel" CacheLengthUnit="Page" CacheLength="1.1" ScrollLineDelta="16" MouseWheelDelta="48"  SpacingMode="Uniform" VirtualizingStackPanel.IsVirtualizing="True"  VirtualizingStackPanel.VirtualizationMode="Recycling" IsItemsHost="True" Orientation="Horizontal"  />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Page>
