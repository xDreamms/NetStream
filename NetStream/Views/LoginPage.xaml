<Page x:Class="NetStream.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d" 
      d:DesignHeight="882" d:DesignWidth="551"
      Title="LoginPage" KeyDown="TextBoxPassword_OnKeyDown" >

    <materialDesign:DialogHost x:Name="DialogHost">
        <materialDesign:DialogHost.DialogContent>
            <StackPanel Orientation="Vertical" Margin="20">
                <StackPanel x:Name="StackPanelError" Visibility="Collapsed" >
                    <TextBlock x:Name="TextBlockDialogText" Style="{StaticResource Gotham}" Margin="10" Text="" />
                   <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                       <Button PreviewMouseLeftButtonDown="BtnCloseDialog_OnPreviewMouseLeftButtonDown" Margin="10" Name="BtnCloseDialog" Content="{DynamicResource OkayString}" />
                       <Button Visibility="Collapsed" PreviewMouseLeftButtonDown="BtnSendVerificationAgain" Margin="10" Name="BtnSendVerification" Content="{DynamicResource EmailVerificationSendString}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="StackPanelResetPassword" Visibility="Collapsed" >
                    <TextBlock Style="{StaticResource Gotham}" FontWeight="Medium" Text="{DynamicResource ResetPassword}" HorizontalAlignment="Center" FontSize="24" Margin="0 0 0  0" Foreground="White"></TextBlock>
                    <TextBox materialDesign:HintAssist.FontFamily="/Fonts/#Gotham" FontWeight="Light" FontFamily="/Fonts/#Gotham" BorderBrush="#494949" Margin="0 20 0 0" Width="300" FontSize="14" materialDesign:HintAssist.Background="Transparent"  x:Name="TextBoxEmailForgotPassword"  materialDesign:HintAssist.Foreground="White" materialDesign:HintAssist.Hint="{DynamicResource EmailString}" Foreground="White" Style="{StaticResource MaterialDesignOutlinedTextBox}" BorderThickness="2" >

                    </TextBox>
                    <Button FontWeight="Normal" FontFamily="/Fonts/#Gotham" materialDesign:ButtonAssist.CornerRadius="10" Height="30" Width="300" Margin="0 20 0 0" Style="{StaticResource MaterialDesignFlatMidBgButton}" x:Name="BtnResetPassword"  PreviewMouseLeftButtonDown="BtnResetPassword_OnPreviewMouseLeftButtonDown"  Grid.Row="10" Content="{DynamicResource Send}" Grid.Column="1"></Button>

                    <Button FontWeight="Normal" FontFamily="/Fonts/#Gotham" materialDesign:ButtonAssist.CornerRadius="10" Margin="0 10 0 0" Height="30" Width="300" Style="{StaticResource MaterialDesignFlatButton}" x:Name="BtnCancel" PreviewMouseLeftButtonDown="BtnCancel_OnPreviewMouseLeftButtonDown"  Content="{DynamicResource Cancel}">
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>
        <StackPanel Margin="25">

            <Image Margin="0 50 0 0" Height="100" Source="../logo/NetStreamLogo.png"></Image>

            <TextBlock Style="{StaticResource Gotham}" FontWeight="Medium" Text="{DynamicResource WelcomeBack}" HorizontalAlignment="Center" FontSize="28" Margin="0 35 0  5" Foreground="White"></TextBlock>
            <TextBlock Style="{StaticResource Gotham}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Center" Text="{DynamicResource LoginExistingAccount}" Foreground="White"></TextBlock>

            <TextBox materialDesign:HintAssist.FontFamily="/Fonts/#Gotham" FontWeight="Light" FontFamily="/Fonts/#Gotham" BorderBrush="#494949" Margin="0 50 0 0" Width="350" FontSize="18" materialDesign:HintAssist.Background="Transparent"  x:Name="TextBoxEmail"  materialDesign:HintAssist.Foreground="White" materialDesign:HintAssist.Hint="{DynamicResource EmailString}" Foreground="White" Style="{StaticResource MaterialDesignOutlinedTextBox}" BorderThickness="2" >

            </TextBox>

            <PasswordBox FontWeight="Light"  FontFamily="/Fonts/#Gotham" GotFocus="TextBoxPassword_OnGotFocus" LostFocus="TextBoxPassword_OnLostFocus" BorderBrush="#494949" Margin="0 20 0 0" Width="350" BorderThickness="2" FontSize="18" materialDesign:HintAssist.Background="Transparent" Grid.Row="7" Grid.Column="1" x:Name="TextBoxPassword" 
                          materialDesign:HintAssist.HelperText=""
                          materialDesign:HintAssist.Hint="{DynamicResource PasswordString}"
                          materialDesign:HintAssist.Foreground="White" Foreground="White"
                          Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
            />
            <Button FontWeight="Normal" FontFamily="/Fonts/#Gotham" materialDesign:ButtonAssist.CornerRadius="10" Height="53" Width="350" Margin="0 20 0 0" Style="{StaticResource MaterialDesignFlatMidBgButton}" x:Name="BtnSignIn" PreviewMouseLeftButtonDown="BtnSignIn_OnPreviewMouseLeftButtonDown"  Grid.Row="10" Content="{DynamicResource SignInString}" Grid.Column="1"></Button>

            <Button FontWeight="Normal" FontFamily="/Fonts/#Gotham" materialDesign:ButtonAssist.CornerRadius="10" Margin="0 20 0 0" Height="53" Width="350" Style="{StaticResource MaterialDesignFlatButton}" x:Name="BtnSignUp" PreviewMouseLeftButtonDown="BtnSignUp_OnPreviewMouseLeftButtonDown"  Content="{DynamicResource SignUpString}">
            </Button>
            <TextBlock Cursor="Hand" x:Name="ResetPasswordButton" PreviewMouseLeftButtonDown="ResetPasswordButton_OnPreviewMouseLeftButtonDown" MouseEnter="ResetPasswordButton_OnMouseEnter" MouseLeave="ResetPasswordButton_OnMouseLeave" Margin="0 20 0 0" Style="{StaticResource Gotham}" FontSize="16"  HorizontalAlignment="Center" Foreground="White" Text="{DynamicResource ForgotYourPassword}"></TextBlock>

        </StackPanel>
    </materialDesign:DialogHost>
      
</Page>
