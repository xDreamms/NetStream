<Page x:Class="NetStream.MovieDetailsOverViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      Title="MovieDetailsOverViewPage" Loaded="MovieDetailsOverViewPage_OnLoaded"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      
      d:DesignHeight="900" d:DesignWidth="800"
      Background="#111111" KeepAlive="False" Unloaded="MovieDetailsOverViewPage_OnUnloaded">

    <Grid>
        <Grid x:Name="MovieDetailArea" >
            

            <StackPanel Margin="0 50 0 30" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Border  Height="473" Width="315" BorderBrush="#1F2021" VerticalAlignment="Top"  HorizontalAlignment="Center" BorderThickness="5" Margin="0 9 0 0" Grid.Column="1" Grid.Row="1">
                    <Image Stretch="UniformToFill"  Source="{Binding Poster}" ></Image>
                </Border>

                <StackPanel Orientation="Vertical" Margin="35 35 0 0">
                    <TextBlock x:Name="StoryLineString" Style="{StaticResource Gotham}" FontWeight="Medium" FontSize="35" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Text="{DynamicResource StorylineString}" Foreground="White" ></TextBlock>


                    <Viewbox Margin="0 10 0 0"  HorizontalAlignment="Left" VerticalAlignment="Top" >
                        <StackPanel  Width="900">
                            <TextBlock x:Name="OverviewString" FontSize="17" Style="{StaticResource Gotham}" FontWeight="Normal"
    TextWrapping="Wrap" 
    Foreground="#C6C6C6"
    Text="{Binding Overview}" />
                        </StackPanel>

                    </Viewbox>

                    <StackPanel Margin="0 30 0 0" Grid.Row="4" Grid.Column="1" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal"  >
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="0 0 0 0" FontSize="15" HorizontalAlignment="Left" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource ReleasedString}" x:Name="ReleasedString" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock Margin="0 15 0 0"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource DirectorString}" Foreground="#C5C5C5" x:Name="DirectorString"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource RevenueString}" Foreground="#C5C5C5" x:Name="RevenueString"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource StatusString}" Foreground="#C5C5C5" x:Name="StatusString"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource ProductionString}" Foreground="#C5C5C5" x:Name="ProductionString"></TextBlock>
                            </StackPanel>

                            <StackPanel Margin="50 0 0 0" Orientation="Vertical">
                                <TextBlock FontSize="15" HorizontalAlignment="Left" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding ReleaseDate}" x:Name="ReleaseDateText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock Cursor="Hand" MouseLeave="DirectorText_OnMouseLeave" MouseEnter="DirectorText_OnMouseEnter" PreviewMouseLeftButtonDown="DirectorText_OnPreviewMouseLeftButtonDown"  Margin="0 15 0 0" HorizontalAlignment="Left"  FontSize="15" Style="{StaticResource Gotham}" FontWeight="Light" x:Name="DirectorText" Text="{Binding Director}" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding Revenue}" x:Name="RevenueText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding Status}" x:Name="StatusText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding Production}" x:Name="ProductionText" Foreground="#C5C5C5"></TextBlock>
                            </StackPanel>

                            <StackPanel Margin="200 0 0 0" Orientation="Vertical">
                                <TextBlock FontSize="15" HorizontalAlignment="Left" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource RuntimeString}" x:Name="RuntimeString" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0"  Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource BudgetString}" x:Name="BudgetString" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource GenreString}" x:Name="GenreString" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Normal" Text="{DynamicResource LanguageString}" x:Name="LanguageString" Foreground="#C5C5C5"></TextBlock>
                            </StackPanel>

                            <StackPanel Margin="50 0 0 0" Orientation="Vertical">
                                <TextBlock FontSize="15" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding Runtime}" x:Name="RuntimeText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding Budget}" x:Name="BudgetText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding Genre}" x:Name="GenreText" Foreground="#C5C5C5"></TextBlock>
                                <TextBlock FontSize="15" Margin="0 15 0 0" Style="{StaticResource Gotham}" FontWeight="Light" Text="{Binding Language}" x:Name="LanguageText" Foreground="#C5C5C5"></TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel VerticalAlignment="Top" Margin="0 40 0 0" Orientation="Horizontal" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2">
                            <fa:IconBlock Margin="0 0 15 0" Cursor="Hand" MouseLeave="BtnFacebook_OnMouseLeave" MouseEnter="BtnFacebook_OnMouseEnter" PreviewMouseLeftButtonDown="BtnFacebook_OnPreviewMouseLeftButtonDown" x:Name="BtnFacebook"  FontSize="22" Icon="Facebook"  Foreground="White"></fa:IconBlock>
                            <fa:IconBlock Cursor="Hand" MouseLeave="BtnInstagram_OnMouseLeave" MouseEnter="BtnInstagram_OnMouseEnter" PreviewMouseLeftButtonDown="BtnInstagram_OnPreviewMouseLeftButtonDown" x:Name="BtnInstagram" Margin="0 0 15 0"  Icon="Instagram" FontSize="24" Foreground="White"></fa:IconBlock>
                            <fa:IconBlock Cursor="Hand" MouseLeave="BtnImadb_OnMouseLeave"  MouseEnter="BtnImadb_OnMouseEnter" PreviewMouseLeftButtonDown="BtnImadb_OnPreviewMouseLeftButtonDown"  x:Name="BtnImadb" Margin="0 0 15 0"  Icon="Imdb" FontSize="24" Foreground="White"></fa:IconBlock>
                            <fa:IconBlock Cursor="Hand" MouseLeave="BtnTwitter_OnMouseLeave" MouseEnter="BtnTwitter_OnMouseEnter" PreviewMouseLeftButtonDown="BtnTwitter_OnPreviewMouseLeftButtonDown" x:Name="BtnTwitter" Margin="0 0 15 0"  Icon="Twitter" FontSize="24" Foreground="White"></fa:IconBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
               
            </StackPanel>
           
           
            
           
        </Grid>
    </Grid>
</Page>
