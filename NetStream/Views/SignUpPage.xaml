<Page x:Class="NetStream.Views.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="882" d:DesignWidth="551"
      Title="SignUpPage" KeyDown="SignUpPage_OnKeyDown">
    <materialDesign:DialogHost x:Name="DialogHost">
        <materialDesign:DialogHost.DialogContent>
            <Grid>
                <StackPanel Visibility="Visible" x:Name="StackPanelError" Margin="15">
                    <TextBlock x:Name="TextBlockDialogText" Style="{StaticResource Gotham}" Margin="10" Text="" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button PreviewMouseLeftButtonDown="BtnCloseDialog_OnPreviewMouseLeftButtonDown" Margin="10" Name="BtnCloseDialog" Content="{DynamicResource OkayString}" />
                        <Button Visibility="Collapsed" PreviewMouseLeftButtonDown="BtnSendVerificationAgain" Margin="10" Name="BtnSendVerification" Content="{DynamicResource EmailVerificationSendString}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Visibility="Collapsed" Margin="15" x:Name="UploadProfilePhoto" Orientation="Vertical">
                    <TextBlock FontSize="16" HorizontalAlignment="Center" Margin="10" Style="{StaticResource Gotham}" Text="{DynamicResource SetDefaultPhoto}"></TextBlock>
                    <Grid Width="100" Height="100" Margin="0 20 0 5">
                        <Grid Width="200" HorizontalAlignment="Center">
                            <Image x:Name="ProfilePhoto" Stretch="Uniform"/>
                        </Grid>
                        <Grid.Clip>
                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                        </Grid.Clip>
                    </Grid>
                    <StackPanel Margin="0 26 0 0" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button PreviewMouseLeftButtonDown="ButtonKeepIt_OnPreviewMouseLeftButtonDown" Margin="0 0 10 0"
                                x:Name="ButtonKeepIt"
                                Content="{DynamicResource KeepIt}"
                                Style="{StaticResource MaterialDesignOutlinedLightButton}"
                        />
                        <Button PreviewMouseLeftButtonDown="ButtonSelect_OnPreviewMouseLeftButtonDown" Margin="0 0 10 0"
                                x:Name="ButtonSelect"
                                Content="{DynamicResource Select}"
                                Style="{StaticResource MaterialDesignOutlinedLightButton}"
                        />
                        <Button IsEnabled="False" PreviewMouseLeftButtonDown="ButtonChangeProfilePhoto_OnPreviewMouseLeftButtonDown" Margin="0" x:Name="ButtonChangeProfilePhoto" Content="{DynamicResource Confirm}" Style="{StaticResource MaterialDesignOutlinedLightButton}"></Button>
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="ProgressReport" Orientation="Vertical" Visibility="Collapsed">
                    <ProgressBar  Margin="10"
                        IsIndeterminate="True"
                        Style="{StaticResource MaterialDesignCircularProgressBar}"
                        Value="0"
                    />
                    <TextBlock FontSize="16" Margin="10" Text="" x:Name="ProgressInfo"></TextBlock>
                </StackPanel>
            </Grid>
            
        </materialDesign:DialogHost.DialogContent>
        <StackPanel>


            <Image Margin="0 50 0 0" Height="100"  Source="../logo/NetStreamLogo.png"></Image>
            <TextBlock Style="{StaticResource Gotham}" FontWeight="Medium" Text="{DynamicResource WelcomeSignUp}" HorizontalAlignment="Center" FontSize="28" Margin="0 35 0  5" Foreground="White"></TextBlock>
            <TextBlock Style="{StaticResource Gotham}" FontSize="17" FontWeight="Normal" HorizontalAlignment="Center" Text="{DynamicResource CreateAccount}" Foreground="White"></TextBlock>
            <TextBox FontWeight="Light" FontFamily="/Fonts/#Gotham" BorderBrush="#494949" Margin="0 50 0 0" Width="350" BorderThickness="2" materialDesign:HintAssist.Background="Transparent" FontSize="18" Grid.Row="3" Grid.Column="1" x:Name="TextBoxDisplayName"  materialDesign:HintAssist.Foreground="White" materialDesign:HintAssist.Hint="{DynamicResource DisplayNameString}" Foreground="White" Style="{StaticResource MaterialDesignOutlinedTextBox}" >

            </TextBox>
            <TextBox materialDesign:HintAssist.FontFamily="/Fonts/#Gotham" FontWeight="Light" FontFamily="/Fonts/#Gotham" BorderBrush="#494949" BorderThickness="2"  Margin="0 20 0 0" Width="350" materialDesign:HintAssist.Background="Transparent" FontSize="18" Grid.Row="5" Grid.Column="1" x:Name="TextBoxEmail"  materialDesign:HintAssist.Foreground="White" materialDesign:HintAssist.Hint="{DynamicResource EmailString}" Foreground="White" Style="{StaticResource MaterialDesignOutlinedTextBox}" >

            </TextBox>

            <PasswordBox  LostFocus="TextBoxPassword_OnLostFocus" GotFocus="TextBoxPassword_OnGotFocus" materialDesign:HintAssist.FontFamily="/Fonts/#Gotham" FontWeight="Light" FontFamily="/Fonts/#Gotham" BorderBrush="#494949" BorderThickness="2"  Margin="0 20 0 0" Width="350" FontSize="18" materialDesign:HintAssist.Background="Transparent" Grid.Row="7" Grid.Column="1" x:Name="TextBoxPassword" 
                         materialDesign:HintAssist.HelperText=""
                         materialDesign:HintAssist.Hint="{DynamicResource PasswordString}"
                         materialDesign:HintAssist.Foreground="White" Foreground="White"
                         Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
            />
            <Button FontWeight="Normal" FontFamily="/Fonts/#Gotham" materialDesign:ButtonAssist.CornerRadius="10" Height="53" Width="350" Margin="0 50 0 0" Style="{StaticResource MaterialDesignFlatMidBgButton}" x:Name="BtnSignUp" PreviewMouseLeftButtonDown="BtnSignUp_OnPreviewMouseLeftButtonDown"  Grid.Row="10" Content="{DynamicResource SignUpString}" Grid.Column="1"></Button>


            <Button FontWeight="Normal" FontFamily="/Fonts/#Gotham" materialDesign:ButtonAssist.CornerRadius="10" Margin="0 20 0 0" Height="53" Width="350" PreviewMouseLeftButtonDown="UIElement_OnPreviewMouseLeftButtonDown" Style="{StaticResource MaterialDesignFlatButton}" Content="{DynamicResource SignInString}"></Button>
            

        </StackPanel>
    </materialDesign:DialogHost>
   
</Page>
