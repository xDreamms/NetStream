<Page x:Class="NetStream.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="2000" d:DesignWidth="800"
      Title="SettingsPage" Loaded="SettingsPage_OnLoaded" Unloaded="SettingsPage_OnUnloaded" >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/ColorPicker;component/Styles/DefaultColorPickerStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <materialDesign:DialogHost x:Name="DialogHost">
        <materialDesign:DialogHost.DialogContent>
            <Grid>
                <StackPanel Visibility="Visible" x:Name="StackPanelError" Margin="15">
                    <TextBlock x:Name="TextBlockDialogText" Style="{StaticResource Gotham}" Margin="10" Text="" />
                    <Button PreviewMouseLeftButtonDown="BtnCloseDialog_OnPreviewMouseLeftButtonDown" Margin="10" Name="BtnCloseDialog" Content="{DynamicResource OkayString}" />
                </StackPanel>
                <StackPanel x:Name="ProgressReport" Orientation="Vertical" Visibility="Collapsed">
                    <ProgressBar  Margin="10"
                     IsIndeterminate="True"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     Value="0"
                 />
                    <TextBlock FontSize="16" Margin="10" Text="" x:Name="ProgressInfo"></TextBlock>
                </StackPanel>
                <StackPanel x:Name="StackPanelChangePassword" Visibility="Collapsed" Orientation="Vertical">
                    <TextBlock Style="{StaticResource Gotham}" FontWeight="Normal" FontSize="24" HorizontalAlignment="Center" Margin="0 20 0 0" Text="{DynamicResource ChangePassword2}"></TextBlock>
                    <PasswordBox FontFamily="/Fonts/#Gotham" Width="320" x:Name="TextBoxCurrentPassword" Foreground="White" Margin="10 30 10 0"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 VerticalAlignment="Top"
                                 materialDesign:HintAssist.Foreground="White"
                                 materialDesign:HintAssist.Background="Transparent"
                                 materialDesign:HintAssist.Hint="{DynamicResource CurrentPassword}"
                    >
                    </PasswordBox>
                    <PasswordBox FontFamily="/Fonts/#Gotham" Width="320" x:Name="TextBoxNewPassword" Foreground="White" Margin="10 15 10 0"
                                 VerticalAlignment="Top"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Foreground="White"
                                 materialDesign:HintAssist.Background="Transparent"
                                 materialDesign:HintAssist.Hint="{DynamicResource NewPassword}"
                    >
                    </PasswordBox>
                    <PasswordBox FontFamily="/Fonts/#Gotham" Width="320" x:Name="TextBoxNewPasswordAgain" Foreground="White" Margin="10 15 10 0"
                                 VerticalAlignment="Top"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Foreground="White"
                                 materialDesign:HintAssist.Background="Transparent"
                                 materialDesign:HintAssist.Hint="{DynamicResource RetypeNewPassword}"
                    >
                    </PasswordBox>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button x:Name="CancelButton" PreviewMouseLeftButtonDown="CancelButton_OnPreviewMouseLeftButtonDown"
                                FontFamily="/Fonts/#Gotham" HorizontalAlignment="Right" Margin="0 30 10 25"
                                Content="{DynamicResource Cancel}"
                                Style="{StaticResource MaterialDesignPaperButton}"
                        />
                        <RepeatButton x:Name="ChangePasswordButton" PreviewMouseLeftButtonDown="ChangePasswordButton_OnPreviewMouseLeftButtonDown" FontFamily="/Fonts/#Gotham" HorizontalAlignment="Right" Margin="0 30 10 25"
                                      Content="{DynamicResource Change}"
                        />
                    </StackPanel>
                </StackPanel>

                <StackPanel Visibility="Collapsed" x:Name="StackPanelChangeUsername" Orientation="Vertical">
                    <TextBlock Style="{StaticResource Gotham}" FontWeight="Normal" FontSize="24" HorizontalAlignment="Center" Margin="0 25 0 0" Text="{DynamicResource ChangeUsername2}"></TextBlock>
                    <TextBox Width="320" x:Name="TextBoxNewUsername" Foreground="White" Margin="15 30 15 0"
                             VerticalAlignment="Top"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Foreground="White"
                             materialDesign:HintAssist.Background="Transparent"
                             materialDesign:HintAssist.Hint="{DynamicResource NewUsername}"
                    ></TextBox>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button  x:Name="CancelButtonChangeUsername" PreviewMouseLeftButtonDown="CancelButtonChangeUsername_OnPreviewMouseLeftButtonDown"
                                FontFamily="/Fonts/#Gotham" HorizontalAlignment="Right" Margin="0 30 10 20"
                                Content="{DynamicResource Cancel}"
                                Style="{StaticResource MaterialDesignPaperButton}"
                        />
                        <RepeatButton x:Name="ChangeUsernameButton" PreviewMouseLeftButtonDown="ChangeUsernameButton_OnPreviewMouseLeftButtonDown" FontFamily="/Fonts/#Gotham" HorizontalAlignment="Right" Margin="0 30 10 20"
                                      Content="{DynamicResource Change}"
                        />
                    </StackPanel>
                </StackPanel>
            </Grid>

        </materialDesign:DialogHost.DialogContent>
        <ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.03*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="850"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                    <RowDefinition Height="275"></RowDefinition>
                </Grid.RowDefinitions>

                <Frame BorderThickness="0" Grid.Column="1" NavigationUIVisibility="Hidden" x:Name="AccountNav" Grid.Row="1"></Frame>

                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
                    <TextBlock FontSize="35" FontWeight="Medium" Style="{StaticResource Gotham}" Text="{DynamicResource LanguageString}" Foreground="White"></TextBlock>
                    <StackPanel Margin="0 40 0 0" Orientation="Horizontal">
                        <StackPanel  Orientation="Vertical">
                            <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="{DynamicResource TmdbResultsString}" Foreground="White"></TextBlock>
                            <ComboBox Width="320" SelectionChanged="ComboBoxTmdbResultLanguage_OnSelectionChanged" x:Name="ComboBoxTmdbResultLanguage" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="0"
                                  materialDesign:HintAssist.Hint="{DynamicResource SelectLanguageString}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}">

                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="38 0 0 0">

                            <TextBlock FontSize="15" FontWeight="Light"   Style="{StaticResource Gotham}"  Text="{DynamicResource ProgramLanguageString}" Foreground="White"></TextBlock>
                            <ComboBox Width="320" SelectionChanged="ComboBoxProgramLanguage_OnSelectionChanged" x:Name="ComboBoxProgramLanguage" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="2"
                                  materialDesign:HintAssist.Hint="{DynamicResource SelectLanguageString}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="38 0 0 0">

                            <TextBlock FontWeight="Light" FontSize="15"  Style="{StaticResource Gotham}"  Text="{DynamicResource SubtitleLanguageString}" Foreground="White"></TextBlock>
                            <ComboBox Width="320" SelectionChanged="ComboBoxSubtitleLanguage_OnSelectionChanged" x:Name="ComboBoxSubtitleLanguage" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="4"
                                  materialDesign:HintAssist.Hint="{DynamicResource SelectLanguageString}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" >

                    <TextBlock FontSize="35" FontWeight="Medium" Style="{StaticResource Gotham}" Text="Jackett" Foreground="White"></TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0 40 0 0">
                        <StackPanel Margin="0 0 0 150" Orientation="Vertical">
                            <TextBlock FontWeight="Light" FontSize="15"  Style="{StaticResource Gotham}"   Text="{DynamicResource APIUrlString}" Foreground="White"></TextBlock>
                            <TextBox Width="320" TextChanged="TextBoxJackettApiUrl_OnTextChanged" x:Name="TextBoxJackettApiUrl" Grid.Row="2" Grid.Column="0" Foreground="White" Margin="0 10 0 0"
                                 VerticalAlignment="Top"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Foreground="White"
                                 materialDesign:HintAssist.Background="Transparent"
                        >
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="38 0 0 0">
                            <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="{DynamicResource APIKeyString}" Foreground="White"></TextBlock>
                            <TextBox Width="320" TextChanged="TextBoxJackettApiKey_OnTextChanged" x:Name="TextBoxJackettApiKey" Grid.Row="2" Grid.Column="2" Foreground="White" Margin="0 10 0 0"
                                 VerticalAlignment="Top"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Foreground="White"
                                 materialDesign:HintAssist.Background="Transparent"
                        >
                            </TextBox>
                        </StackPanel>
                        <StackPanel Margin="38 0 0 0" Orientation="Vertical">
                            <TextBlock Style="{StaticResource Gotham}" FontWeight="Light" Foreground="White" FontSize="15" Text="{DynamicResource SelectIndexersString}"></TextBlock>
                            <hc:CheckComboBox Language="en-US" ShowSelectAllButton="True" Margin="0 10 0 0" Width="500" Height="Auto" x:Name="ComboBoxJacketIndexers"></hc:CheckComboBox>
                        </StackPanel>
                       
                    </StackPanel>
                </StackPanel>

                <StackPanel  Grid.Row="4" Grid.Column="1" Orientation="Vertical">

                    <TextBlock Style="{StaticResource Gotham}" FontWeight="Medium" FontSize="35" Text="Libtorrent" Foreground="White"></TextBlock>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Margin="0 40 0 0">
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock  FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Send Socket Buffer Size" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxSendSocketBufferSize"  Foreground="White" Margin="0 10 0 0"
             VerticalAlignment="Top"
             Style="{StaticResource MaterialDesignOutlinedTextBox}"
             materialDesign:HintAssist.Foreground="White"
             materialDesign:HintAssist.Background="Transparent"
    >
                                </TextBox>
                            </StackPanel>
                            <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Recv Socket Buffer Size" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxRecvSocketBufferSize"  Foreground="White" Margin="0 10 0 0"
                 VerticalAlignment="Top"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Foreground="White"
                 materialDesign:HintAssist.Background="Transparent"
        >
                                </TextBox>
                            </StackPanel>

                            <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Connections Limit" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxConnectionsLimit"  Foreground="White" Margin="0 10 0 0"
                 VerticalAlignment="Top"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Foreground="White"
                 materialDesign:HintAssist.Background="Transparent"
        >
                                </TextBox>
                            </StackPanel>

                            <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Unchoke Slots Limit" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxUnchokeSlotsLimit"  Foreground="White" Margin="0 10 0 0"
                 VerticalAlignment="Top"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Foreground="White"
                 materialDesign:HintAssist.Background="Transparent"
        >
                                </TextBox>
                            </StackPanel>

                            <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Max Peerlist Size" Foreground="White"></TextBlock>
                                <TextBox Width="320"  x:Name="TextBoxMaxPeerlistSize"  Foreground="White" Margin="0 10 0 0"
                 VerticalAlignment="Top"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Foreground="White"
                 materialDesign:HintAssist.Background="Transparent"
        >
                                </TextBox>
                            </StackPanel>

                            <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Half Open Limit" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxHalfOpenLimit"  Foreground="White" Margin="0 10 0 0"
                 VerticalAlignment="Top"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Foreground="White"
                 materialDesign:HintAssist.Background="Transparent"
        >
                                </TextBox>
                            </StackPanel>

                            <StackPanel Margin="0 20 0 0" HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Active Downloads" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxActiveDownloads"  Foreground="White" Margin="0 10 0 0"
                 VerticalAlignment="Top"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Foreground="White"
                 materialDesign:HintAssist.Background="Transparent"
        >
                                </TextBox>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="40 40 0 0">
                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock  FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Cache Size" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxCacheSize"  Foreground="White" Margin="0 10 0 0"
                                         VerticalAlignment="Top"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Foreground="White"
                                         materialDesign:HintAssist.Background="Transparent"
                                >
                                </TextBox>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Margin="0 20 0 0">

                                <TextBlock FontWeight="Light" FontSize="15"  Style="{StaticResource Gotham}"  Text="Disk IO Write Mode" Foreground="White"></TextBlock>
                                <ComboBox Width="320"  x:Name="ComboBoxDiskIOWriteMode" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="4"
                                          materialDesign:HintAssist.Hint="Select"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </StackPanel>


                            <StackPanel Orientation="Vertical" Margin="0 20 0 0">

                                <TextBlock FontWeight="Light" FontSize="15"  Style="{StaticResource Gotham}"  Text="Disk IO Read Mode" Foreground="White"></TextBlock>
                                <ComboBox Width="320" x:Name="ComboBoxDiskIOReadMode" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="4"
                                          materialDesign:HintAssist.Hint="Select"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </StackPanel>


                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="0 20 0 0">
                                <TextBlock  FontSize="15" FontWeight="Light"  Style="{StaticResource Gotham}"  Text="Read Cache Line Size" Foreground="White"></TextBlock>
                                <TextBox Width="320"   x:Name="TextBoxReadCacheLineSize"  Foreground="White" Margin="0 10 0 0"
                                         VerticalAlignment="Top"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Foreground="White"
                                         materialDesign:HintAssist.Background="Transparent"
                                >
                                </TextBox>
                            </StackPanel>


                           
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="40 40 0 0">
                            <StackPanel Orientation="Vertical" Margin="0 0 0 0">

                                <TextBlock FontWeight="Light" FontSize="15"  Style="{StaticResource Gotham}"  Text="Encryption Level" Foreground="White"></TextBlock>
                                <ComboBox Width="320"  x:Name="ComboBoxEncryptionLevel" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="4"
               materialDesign:HintAssist.Hint="Select"
               Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </StackPanel>



                            <StackPanel Orientation="Vertical" Margin="0 20 0 0">

                                <TextBlock FontWeight="Light" FontSize="15"  Style="{StaticResource Gotham}"  Text="Outgoing Traffic Encryption" Foreground="White"></TextBlock>
                                <ComboBox Width="320"  x:Name="ComboBoxOutgoingTrafficEncryption" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="4"
               materialDesign:HintAssist.Hint="Select"
               Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Margin="0 20 0 0">

                                <TextBlock FontWeight="Light" FontSize="15"  Style="{StaticResource Gotham}"  Text="Incoming Traffic Encryption" Foreground="White"></TextBlock>
                                <ComboBox Width="320"  x:Name="ComboBoxIncomingTrafficEncryption" Margin="0 10 0 0" VerticalAlignment="Top" Foreground="White" Grid.Row="2" Grid.Column="4"
               materialDesign:HintAssist.Hint="Select"
               Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="40 40 0 0">
                            <CheckBox  x:Name="CheckBoxPreferRc4"  Content="Prioritize RC4 Encryption" FontFamily="/Fonts/#Gotham" Foreground="White" FontSize="18" FontWeight="Light" Height="Auto" IsChecked="True" Margin="0 0 0 0"></CheckBox>
                            <CheckBox   x:Name="CheckBoxEnableDht"  Content="Enable Dht" FontFamily="/Fonts/#Gotham" Foreground="White" FontSize="18" FontWeight="Light" Height="Auto" IsChecked="True" Margin="0 20 0 0"></CheckBox>
                            <CheckBox   x:Name="CheckBoxEnableLsd"  Content="Enable Lsd" FontFamily="/Fonts/#Gotham" Foreground="White" FontSize="18" FontWeight="Light" Height="Auto" IsChecked="True" Margin="0 20 0 0"></CheckBox>
                            <CheckBox   x:Name="CheckBoxEnableNatpmp"  Content="Enable Natpmp" FontFamily="/Fonts/#Gotham" Foreground="White" FontSize="18" FontWeight="Light" Height="Auto" IsChecked="True" Margin="0 20 0 0"></CheckBox>
                            <CheckBox   x:Name="CheckBoxEnableUpnp"  Content="Enable Upnp" FontFamily="/Fonts/#Gotham" Foreground="White" FontSize="18" FontWeight="Light" Height="Auto" IsChecked="True" Margin="0 20 0 0"></CheckBox>

                        </StackPanel>
                    </StackPanel>

                    

                    </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="1">
                    <TextBlock Style="{StaticResource Gotham}" FontSize="35" FontWeight="Medium" Text="OpenSubtitles" Foreground="White"></TextBlock>
                    <TextBlock Margin="0 40 0 0" Style="{StaticResource Gotham}" Text="{DynamicResource APIKeyString}" FontSize="15" FontWeight="Light" Foreground="White"></TextBlock>
                    <TextBox Width="320" HorizontalAlignment="Left" TextChanged="TextBoxopenSubtitlesApiKey_OnTextChanged" x:Name="TextBoxopenSubtitlesApiKey"  Foreground="White" Margin="0 10 0 0"
                         VerticalAlignment="Top"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Foreground="White"
                         materialDesign:HintAssist.Background="Transparent"
                >
                    </TextBox>
                    <TextBlock Cursor="Hand" PreviewMouseLeftButtonDown="OpenSubtitlesGetApiKey_OnPreviewMouseLeftButtonDown" MouseLeave="OpenSubtitlesGetApiKey_OnMouseLeave" x:Name="OpenSubtitlesGetApiKey" MouseEnter="OpenSubtitlesGetApiKey_OnMouseEnter" Text="{DynamicResource HowCanIGetOne}" Margin="0 10 0 0" Foreground="White" FontWeight="Light" FontSize="14" Style="{StaticResource Gotham}"></TextBlock>
                </StackPanel>


                <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource Gotham}" FontSize="35" FontWeight="Medium" Text="{DynamicResource FolderString}" Foreground="White"></TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0 40 0 0">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Style="{StaticResource Gotham}" FontSize="15" FontWeight="Light" Text="{DynamicResource SavePathString}" Foreground="White"></TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Width="320" TextChanged="SavePathFolderTextBox_OnTextChanged" x:Name="SavePathFolderTextBox" Grid.Row="2" Grid.Column="0" Foreground="White" Margin="0 10 0 0"

                                      VerticalAlignment="Top"
                                      AcceptsReturn="True"
                                      IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                                      Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                      TextWrapping="Wrap"
                                      VerticalScrollBarVisibility="Auto"
                             />
                                <Button x:Name="ButtonOpenFolder" PreviewMouseLeftButtonDown="ButtonOpenFolder_OnPreviewMouseLeftButtonDown" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 10 0 0" Grid.Column="1" Grid.Row="2" Foreground="White"
                                     Style="{StaticResource MaterialDesignIconButton}"
                                     ToolTip="Open Folder"
                             >
                                    <materialDesign:PackIcon Foreground="White"
                                                          Kind="DotsVertical"
                                 />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource Gotham}" FontSize="35" FontWeight="Medium" Text="{DynamicResource ThemeString}" Foreground="White"></TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0 40 0 0">
                        <TextBlock FontWeight="Light" Style="{StaticResource Gotham}" Margin="0  0 7 0" FontSize="20" Text="{DynamicResource PrimaryColorString}" Foreground="White"></TextBlock>
                        <colorpicker:PortableColorPicker x:Name="PrimaryColorPicker" ColorChanged="PickerControlBase_OnColorChanged" Cursor="Hand" Margin="0 0 0 0" Width="25" Height="25" VerticalAlignment="Top" SelectedColor="{DynamicResource ColorDefault}"></colorpicker:PortableColorPicker>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Row="8"  Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource Gotham}" FontSize="35" FontWeight="Medium" Text="{DynamicResource PlayerSettings}" Foreground="White"></TextBlock>
                    <CheckBox Loaded="PlayerSettingAutoSync_OnLoaded" x:Name="PlayerSettingAutoSync"  Content="{DynamicResource AutoSynchronizeSubtitles}" FontFamily="/Fonts/#Gotham" Foreground="White" FontSize="18" FontWeight="Light" Height="Auto" IsChecked="True" Margin="0 20 0 0"></CheckBox>
                    <CheckBox Loaded="PlayerSettingShowThumbnails_OnLoaded" x:Name="PlayerSettingShowThumbnails"  Content="{DynamicResource ShowThumbnails}" FontFamily="/Fonts/#Gotham" Foreground="White" FontSize="18" FontWeight="Light" Height="Auto" IsChecked="True" Margin="0 20 0 0"></CheckBox>
                </StackPanel>


                <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource Gotham}" FontSize="35" FontWeight="Medium" Text="{DynamicResource ContactUs}" Foreground="White"></TextBlock>
                    <fa:IconBlock PreviewMouseLeftButtonDown="BtnDiscord_OnPreviewMouseLeftButtonDown" MouseLeave="BtnDiscord_OnMouseLeave" x:Name="BtnDiscord" MouseEnter="BtnDiscord_OnMouseEnter" Margin="0 20 0 0" Cursor="Hand" HorizontalAlignment="Left" Icon="Discord" Foreground="White" FontSize="50"></fa:IconBlock>

                    

                </StackPanel>

                <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource Gotham}" FontSize="35" FontWeight="Medium" Text="{DynamicResource SpecialThanks}" Foreground="White"></TextBlock>
                  <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                      <Image HorizontalAlignment="Left" Width="100" Height="100" Source="blue_square_2-d537fb228cf3ded904ef09b136fe3fec72548ebc1fea3fbbd1ad9e36364db38b.png"></Image>
                        <Image Margin="50 0 0 0" Width="100" Height="100" Source="/Views/jackett.png"></Image>
                  </StackPanel>

                </StackPanel>


            </Grid>


        </ScrollViewer>
    </materialDesign:DialogHost>

</Page>
