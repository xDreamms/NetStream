<Page x:Class="NetStream.Views.InstallerWindowMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InstallerWindowMainPage">

    <Grid>
         <StackPanel Orientation="Vertical">
            <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource Gotham}" FontWeight="Normal" Margin="0 60 0 0" Foreground="White" FontSize="40" TextWrapping="Wrap" Text="{DynamicResource Welcome}"></TextBlock>
            <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Margin="0 20 0 0" FontSize="22" TextWrapping="Wrap" FontWeight="Thin" Foreground="White" Style="{StaticResource Gotham}" Text="{DynamicResource NowInstall}"></TextBlock>
            <RepeatButton PreviewMouseLeftButtonDown="UIElement_OnPreviewMouseLeftButtonDown" Margin="0 50 0 0" Content="{DynamicResource Continue}" FontSize="18" HorizontalAlignment="Center"></RepeatButton>
         </StackPanel>
    </Grid>
</Page>
