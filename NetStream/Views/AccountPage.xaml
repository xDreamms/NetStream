<Page x:Class="NetStream.Views.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetStream.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition Height="0.02*"></RowDefinition>
            <RowDefinition Height="0.03*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.03*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonLogOut" PreviewMouseLeftButtonDown="ButtonLogOut_OnPreviewMouseLeftButtonDown" Width="Auto" Grid.Row="0" Margin="0 5 5 0"
                Grid.Column="1" HorizontalAlignment="Right" 
                Content="{DynamicResource LogOut}"
                Style="{StaticResource MaterialDesignFlatLightButton}"
   
        />

        <Grid  Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" HorizontalAlignment="Left">
             <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="0.5*"></ColumnDefinition>
                 <ColumnDefinition Width="Auto"></ColumnDefinition>
                 <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
             </Grid.ColumnDefinitions>
             <Grid.RowDefinitions>
                 <RowDefinition Height="55"></RowDefinition>
                 <RowDefinition Height="0.2*"></RowDefinition>
                 <RowDefinition Height="*"></RowDefinition>
             </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" Grid.Row="0" FontSize="32" Grid.Column="1" x:Name="FavoritesButton" PreviewMouseLeftButtonDown="NavigationButtonPressed" Cursor="Hand" Foreground="White" Text="{DynamicResource FavoritesString}" Style="{StaticResource Gotham}" FontWeight="Normal"></TextBlock>
             <Rectangle Grid.Row="0" x:Name="MenuLine1" Visibility="Visible" Fill="White" Height="3" VerticalAlignment="Bottom" Grid.Column="1"></Rectangle>
            <TextBlock HorizontalAlignment="Center" Grid.Row="0" FontSize="32" Grid.Column="3" x:Name="WatchListButton" PreviewMouseLeftButtonDown="NavigationButtonPressed" Cursor="Hand" Foreground="#414141" Text="{DynamicResource WatchListString}" Style="{StaticResource Gotham}" FontWeight="Normal"></TextBlock>
         </Grid>


        <Frame BorderThickness="0"  Grid.Row="4" x:Name="AccountNavigation" Grid.Column="1"></Frame>
    </Grid>
</Page>
